.wrap
  width 1200px
  margin 0 auto
@keyframes hearts {
  0% {
    transform translate(0, 0) scale(1)
    opacity 1
  }
  33% {
    transform translate(-3px, -13px) scale(1.1)
    opacity .7
  }
  66% {
    transform translate(3px, -26px) scale(1.2)
    opacity .4
  }
  100% {
    transform translate(0, -40px) scale(1.3)
    opacity 0
  }
}
.js-hearts
  animation hearts 1s linear
  position fixed
  .js-wrap
    width 10px
    height 10px
    position relative
    transform rotate(-45deg)
    display block
    z-index 999
  .after
    position absolute
    width 5px
    height 10px
    top 0
    right -4px
    border-radius 0 5px 5px 0
    z-index 1000
  .before
    position absolute
    width 10px
    height 5px
    top -4px
    left 0px
    border-radius 5px 5px 0 0
    z-index 1000
